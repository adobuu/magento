<?xml version="1.0"?>
<config>
    <modules>
        <Mini_Project>
            <version>0.1.0</version>
        </Mini_Project>
    </modules>
    <frontend>
        <routers>
            <checkouts>
                <args>
                    <modules>
                        <mini_project before="Mage_Checkout">Mini_Project</mini_project>
                    </modules>
                </args>
            </checkouts>
        </routers>
    </frontend>
    <global>
        <helpers>
            <project>
                <class>Mini_Project_Helper</class>
            </project>
        </helpers>
    </global>
    <admin>
        <routers>
            <project>
                <use>admin</use>
                <args>
                    <module>Mini_Project</module>
                    <frontName>project</frontName>
                </args>
            </project>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <project_adminform translate="title" module="project">
                <title>Distributors</title>
                <action>project/adminhtml_distributor</action>
            </project_adminform>
        </menu>
        <layout>
            <updates>
                <project>
                    <file>distributor.xml</file>
                </project>
            </updates>
        </layout>
    </adminhtml>

    <global>
        <models>
            <mini_project>
                <class>Mini_Project_Model</class>
                <resourceModel>mini_project_resource</resourceModel>
            </mini_project>
        </models>

        <resources>
            <mini_project_setup>
                <setup>
                    <module>Mini_Project</module>
                </setup>
            </mini_project_setup>
        </resources>

        <blocks>
            <mini_project>
                <class>Mini_Project_Block</class>
            </mini_project>
        </blocks>

        <helpers>
            <mini_project>
                <class>Mini_Project_Helper</class>
            </mini_project>
        </helpers>
    </global>

    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <mini_project before="Mage_Adminhtml">Mini_Project_Adminhtml</mini_project>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
</config>